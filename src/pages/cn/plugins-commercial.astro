---
import PageHeader from "../../components/PageHeader.astro";
import Layout from "../../layouts/Layout.astro";
import { getPage, listPluginCategories } from "../../utils";

const tabs = [
  {
    title: "全部",
    link: "/cn/plugins",
  },
  {
    title: "商业插件",
    link: "/cn/plugins-commercial",
    active: true,
  },
];

const data = await listPluginCategories();
const page = await getPage("plugins");
const title = page.title_cn || page.title;
const description = page.description_cn || page.description;
const keywords = page.keywords_cn || page.keywords;
---

<Layout title={"商业插件"} description={description} keywords={keywords}>
  <PageHeader title={title} tabs={tabs}>
    <span slot="description" set:html={description}></span>
    <a href="/cn/contact" class="btn btn-outline-primary"
      >分享插件<i class="uil uil-angle-right-b"></i></a
    >
  </PageHeader>

  <!-- Section Start -->
  <section class="section">
    <div class="container">
      {
        data
          .filter((group) => group.plugins.filter((plugin: any) => plugin.isCommercial).length > 0)
          .map((group) => (
            <>
              <h4 class="mt-2 pb-1 text-muted">{group.title_cn || group.title}</h4>
              <div class="row pb-4">
                {group.plugins
                  .filter((plugin: any) => plugin.isCommercial)
                  .map((plugin: any) => (
                    <div class="col-lg-4 col-md-6 col-12 pt-0 pb-4">
                      <a title={plugin.title_cn || plugin.title} style="color: inherit;" href={`/cn/docs/handbook/${plugin.name}`} class="card rounded shadow border-0 plugin-card">
                        <div class="card-body">
                          <div class="mt-2">
                            <h6 class="card-title">{plugin.title_cn || plugin.title}</h6>
                            <p class="text-muted mb-2">{plugin.description_cn || plugin.description}</p>
                            {plugin.isCommercial ? (
                              <span class="badge bg-soft-warning plugin-type">
                                Commercial
                              </span>
                            ) : (
                              <span class="badge bg-soft-primary plugin-type">
                                Open source
                              </span>
                            )}
                            {plugin.comingSoon && (
                              <span class="badge bg-soft-info plugin-type">
                                Coming soon
                              </span>
                            )}
                          </div>
                        </div>
                      </a>
                    </div>
                  ))}
              </div>
            </>
          ))
      }
    </div><!--end container-->
  </section><!--end section-->
</Layout><!--end section-->
