---
import Layout from "../../../layouts/Layout.astro";
import ShapeFooter from "../../../components/ShapeFooter.astro";
---

<Layout
  title="Efficient and Convenient Ticketing Management System"
  description="NocoBase ticketing management system serves as an important complement to CRM, providing complete ticket lifecycle management from customer contact creation to ticket assignment and processing, achieving full-process digital management."
  keywords="NocoBase Ticketing System, Ticket Management, Customer Service System, After-sales Service, Ticket Assignment"
>
  <!-- Hero/Banner Start -->
  <section class="bg-half-170 bg-light d-table w-100">
    <div class="container">
      <div class="row align-items-center">
        <div class="col-lg-6 col-md-7 order-1 order-md-1">
          <div class="title-heading">
            <h1 class="fw-bold mt-2 mb-3">Efficient and Convenient Ticketing Management System</h1>
            <p class="para-desc text-muted">NocoBase ticketing management system serves as an important complement to CRM, providing complete ticket lifecycle management. From customer contact creation to ticket entry, assignment, processing and tracking, achieving full-process digital management of after-sales service.</p>
            
            <!-- Tags -->
            <div class="row mt-4">
              <div class="col-auto">
                <div class="d-flex align-items-center">
                  <span class="text-muted me-2">Use Cases:</span>
                  <span class="badge bg-soft-primary me-2">Customer Service</span>
                  <span class="badge bg-soft-primary">After-sales Support</span>
                </div>
              </div>
            </div>

            <!-- Developer Info -->
            <div class="row mt-4">
              <div class="col-auto">
                <div class="d-flex align-items-center">
                  <span class="text-muted me-2">Developer:</span>
                  <img src="https://static-docs.nocobase.com/logo-nocobase.png" height="20" alt="NocoBase" title="Developed by NocoBase" class="developer-logo" />
                </div>
              </div>
            </div>

            <!-- Buttons -->
            <div class="mt-4 pt-2">
              <a href="https://demo.nocobase.com/new" target="_blank" class="btn btn-primary me-3">
                <i class="uil uil-play me-1"></i>Live demo
              </a>
              <a href="#copy-tutorial" class="btn btn-outline-primary">
                <i class="uil uil-copy me-1"></i>Deploy to Your Environment
              </a>
            </div>
          </div>
        </div><!--end col-->

        <div class="col-lg-6 col-md-5 order-2 order-md-2 mt-4 pt-2 mt-sm-0 pt-sm-0">
          <div class="text-center">
            <!-- Ticketing System Preview - Placeholder -->
            <div class="bg-soft-info rounded p-4" style="min-height: 300px;">
              <div class="d-flex align-items-center justify-content-center h-100">
                <span class="text-muted">Ticketing Management System Preview (To be added)</span>
              </div>
            </div>
          </div>
        </div><!--end col-->
      </div><!--end row-->
    </div> <!--end container-->
  </section><!--end section-->
  <!-- Hero/Banner End -->

  <!-- Features Start -->
  <section class="section">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-12">
          <div class="section-title text-center mb-4 pb-2">
            <h4 class="title mb-4">NocoBase Ticketing Management System Features</h4>
            <p class="para-desc mx-auto text-muted mb-0">As an important complement to the CRM system, providing professional customer service and after-sales support management</p>
          </div>
        </div><!--end col-->
      </div><!--end row-->

      <div class="row">
        <div class="col-lg-3 col-md-6 mt-4 pt-2">
          <div class="card border-0 features feature-primary feature-clean course-feature p-4 overflow-hidden shadow h-100">
            <div class="icons text-start">
              <i class="uil uil-user-plus rounded h3 mb-0"></i>
            </div>
            <div class="card-body p-0 mt-4">                                            
              <a href="javascript:void(0)" class="title h5 text-dark">Customer Contact Management</a>
              <p class="text-muted mt-2">Create contacts from customer information, building complete customer profiles and communication records</p>
              <i class="uil uil-user-plus full-img"></i>
            </div>
          </div>
        </div><!--end col-->

        <div class="col-lg-3 col-md-6 mt-4 pt-2">
          <div class="card border-0 features feature-primary feature-clean course-feature p-4 overflow-hidden shadow h-100">
            <div class="icons text-start">
              <i class="uil uil-edit rounded h3 mb-0"></i>
            </div>
            <div class="card-body p-0 mt-4">                                            
              <a href="javascript:void(0)" class="title h5 text-dark">Ticket Entry & Classification</a>
              <p class="text-muted mt-2">Quick ticket entry with support for multiple ticket types and priority classification management</p>
              <i class="uil uil-edit full-img"></i>
            </div>
          </div>
        </div><!--end col-->

        <div class="col-lg-3 col-md-6 mt-4 pt-2">
          <div class="card border-0 features feature-primary feature-clean course-feature p-4 overflow-hidden shadow h-100">
            <div class="icons text-start">
              <i class="uil uil-users-alt rounded h3 mb-0"></i>
            </div>
            <div class="card-body p-0 mt-4">                                            
              <a href="javascript:void(0)" class="title h5 text-dark">Smart Assignment & Tracking</a>
              <p class="text-muted mt-2">Automatic assignment based on ticket types and personnel skills, real-time tracking of processing progress</p>
              <i class="uil uil-users-alt full-img"></i>
            </div>
          </div>
        </div><!--end col-->

        <div class="col-lg-3 col-md-6 mt-4 pt-2">
          <div class="card border-0 features feature-primary feature-clean course-feature p-4 overflow-hidden shadow h-100">
            <div class="icons text-start">
              <i class="uil uil-bell rounded h3 mb-0"></i>
            </div>
            <div class="card-body p-0 mt-4">                                            
              <a href="javascript:void(0)" class="title h5 text-dark">Reminders & Notifications</a>
              <p class="text-muted mt-2">Multi-channel reminder notifications ensuring timely ticket processing and improved customer satisfaction</p>
              <i class="uil uil-bell full-img"></i>
            </div>
          </div>
        </div><!--end col-->
      </div><!--end row-->
    </div><!--end container-->
  </section><!--end section-->
  <!-- Features End -->

  <!-- Commercial Plugins Start -->
  <section class="section">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-12">
          <div class="section-title text-center mb-4 pb-2">
            <h4 class="title mb-4">Commercial Plugins Used in Ticketing System</h4>
            <p class="para-desc mx-auto text-muted mb-0">Learn how to get more powerful features through commercial plugins to enhance the professionalism and usability of your ticketing system</p>
          </div>
        </div><!--end col-->
      </div><!--end row-->

      <div class="row pb-4">
        <!-- Email Management Plugin -->
        <div class="col-lg-4 col-md-6 col-12 pt-0 pb-4">
          <div title="Email Management" style="color: inherit;" class="card rounded shadow border-0 plugin-card h-100">
            <div class="card-body">
              <div class="mt-2 plugin-box">
                <h6 class="card-title mb-1">Email Management</h6>
                <div class="plugin-developer text-muted mb-3">By <span>NocoBase</span></div>
                <p class="text-muted mb-2 plugin-overview">Automatic email reminders and ticket status update notifications to improve customer communication efficiency
                   <a href="https://docs.nocobase.com/plugins/mail" target="_blank" style="font-size: 14px;">Details</a>
                </p>
                <div class="plugin-footer">
                  <h6 class="text-primary mb-0">
                    <span class="text-muted" style="font-weight: normal;font-style: italic;font-size: 12px;">Lifetime use, 1-year upgrade</span><br>
                    <a href="/en/plugins-bundles"> 8 <i class="uil uil-moon-eclipse me-1"></i></a>
                    <span class="text-muted">/</span>
                    <span class="text-muted">$400</span>
                  </h6>
                  <h6 class="text-muted mb-0" style="margin-left: auto;font-weight: normal;">
                    <span class="text-muted" style="font-weight: normal;font-style: italic;font-size: 12px;">Lifetime use & upgrade</span><br>
                    <a class="text-muted" href="/en/plugins-bundles"> 16 <i class="uil uil-moon-eclipse me-1"></i></a>
                    <span class="text-muted">/</span>
                    <span class="text-muted">$800</span>
                  </h6>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Comments Plugin -->
        <div class="col-lg-4 col-md-6 col-12 pt-0 pb-4">
          <div title="Data Table: Comments" style="color: inherit;" class="card rounded shadow border-0 plugin-card h-100">
            <div class="card-body">
              <div class="mt-2 plugin-box">
                <h6 class="card-title mb-1">Data Table: Comments</h6>
                <div class="plugin-developer text-muted mb-3">By <span>NocoBase</span></div>
                <p class="text-muted mb-2 plugin-overview">Add comment interaction features to tickets for internal communication and customer feedback recording
                   <a href="https://docs.nocobase.com/plugins/block-comments" target="_blank" style="font-size: 14px;">Details</a>
                </p>
                <div class="plugin-footer">
                  <h6 class="text-primary mb-0">
                    <span class="text-muted" style="font-weight: normal;font-style: italic;font-size: 12px;">Lifetime use, 1-year upgrade</span><br>
                    <a href="/en/plugins-bundles"> 2 <i class="uil uil-moon-eclipse me-1"></i></a>
                    <span class="text-muted">/</span>
                    <span class="text-muted">$100</span>
                  </h6>
                  <h6 class="text-muted mb-0" style="margin-left: auto;font-weight: normal;">
                    <span class="text-muted" style="font-weight: normal;font-style: italic;font-size: 12px;">Lifetime use & upgrade</span><br>
                    <a class="text-muted" href="/en/plugins-bundles"> 4 <i class="uil uil-moon-eclipse me-1"></i></a>
                    <span class="text-muted">/</span>
                    <span class="text-muted">$200</span>
                  </h6>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Workflow Approval Plugin -->
        <div class="col-lg-4 col-md-6 col-12 pt-0 pb-4">
          <div title="Workflow: Approval Events" style="color: inherit;" class="card rounded shadow border-0 plugin-card h-100">
            <div class="card-body">
              <div class="mt-2 plugin-box">
                <h6 class="card-title mb-1">Workflow: Approval Events</h6>
                <div class="plugin-developer text-muted mb-3">By <span>NocoBase</span></div>
                <p class="text-muted mb-2 plugin-overview">Add approval management to ticket processing workflow, automate ticket assignment and timeout reminders
                   <a href="https://docs.nocobase.com/plugins/workflow" target="_blank" style="font-size: 14px;">Details</a>
                </p>
                <div class="plugin-footer">
                  <h6 class="text-primary mb-0">
                    <span class="text-muted" style="font-weight: normal;font-style: italic;font-size: 12px;">Lifetime use, 1-year upgrade</span><br>
                    <a href="/en/plugins-bundles"> 8 <i class="uil uil-moon-eclipse me-1"></i></a>
                    <span class="text-muted">/</span>
                    <span class="text-muted">$400</span>
                  </h6>
                  <h6 class="text-muted mb-0" style="margin-left: auto;font-weight: normal;">
                    <span class="text-muted" style="font-weight: normal;font-style: italic;font-size: 12px;">Lifetime use & upgrade</span><br>
                    <a class="text-muted" href="/en/plugins-bundles"> 16 <i class="uil uil-moon-eclipse me-1"></i></a>
                    <span class="text-muted">/</span>
                    <span class="text-muted">$800</span>
                  </h6>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div><!--end row-->

      <div class="row justify-content-center mt-4">
        <div class="col-12 text-center">
          <a href="/en/plugins-commercial" class="btn btn-primary me-3">View All Commercial Plugins</a>
          <a href="/en/commercial" class="btn btn-outline-primary">Learn About Pricing</a>
        </div><!--end col-->
      </div><!--end row-->
    </div><!--end container-->
  </section><!--end section-->
  <!-- Commercial Plugins End -->

  <!-- How to Use Start -->
  <section class="section bg-light" id="copy-tutorial">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-12">
          <div class="section-title text-center mb-4 pb-2">
            <h4 class="title mb-4">How to Use?</h4>
            <p class="para-desc mx-auto text-muted mb-0">Three steps to quickly deploy NocoBase Ticketing Management System to your environment</p>
          </div>
        </div><!--end col-->
      </div><!--end row-->

      <div class="row">
        <div class="col-lg-4 col-md-6 mt-4 pt-2">
          <div class="card border-0 text-center features feature-clean course-feature p-4 shadow h-100">
            <div class="d-flex flex-column h-100">
              <div class="icons text-center">
                <i class="uil uil-download-alt h1 text-primary"></i>
              </div>
              <div class="content mt-4 flex-grow-1">
                <h5>Install NocoBase System</h5>
                <p class="text-muted mt-2">Follow our installation documentation to deploy NocoBase system to your server</p>
              </div>
              <div class="mt-3">
                <a href="https://docs.nocobase.com/welcome/getting-started/installation" target="_blank" class="btn btn-primary">View Installation Docs</a>
              </div>
            </div>
          </div>
        </div><!--end col-->

        <div class="col-lg-4 col-md-6 mt-4 pt-2">
          <div class="card border-0 text-center features feature-clean course-feature p-4 shadow h-100">
            <div class="d-flex flex-column h-100">
              <div class="icons text-center">
                <i class="uil uil-cloud-download h1 text-primary"></i>
              </div>
              <div class="content mt-4 flex-grow-1">
                <h5>Download Ticketing System Template</h5>
                <p class="text-muted mt-2">Get the complete template file for NocoBase Ticketing System</p>
              </div>
              <div class="mt-3">
                <a href="javascript:void(0)" class="btn btn-outline-primary">Download Template File</a>
              </div>
            </div>
          </div>
        </div><!--end col-->

        <div class="col-lg-4 col-md-6 mt-4 pt-2">
          <div class="card border-0 text-center features feature-clean course-feature p-4 shadow h-100">
            <div class="d-flex flex-column h-100">
              <div class="icons text-center">
                <i class="uil uil-upload h1 text-primary"></i>
              </div>
              <div class="content mt-4 flex-grow-1">
                <h5>Restore in System</h5>
                <p class="text-muted mt-2">Import the template file into your NocoBase system to complete deployment</p>
              </div>
              <div class="mt-3">
                <a href="javascript:void(0)" class="btn btn-outline-primary">Restore Tutorial</a>
              </div>
            </div>
          </div>
        </div><!--end col-->
      </div><!--end row-->
    </div><!--end container-->
  </section><!--end section-->
  <!-- How to Use End -->

  <!-- CTA Section Start -->
  <section class="section bg-light">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-12 text-center">
          <h3 class="title mb-4">Ready to Use NocoBase Ticketing Management System?</h3>
          <p class="text-muted para-desc mx-auto mb-0">
            Deploy a dedicated ticketing management demo in 1 minute. As an important complement to CRM, achieve a complete customer service system and improve customer satisfaction and service efficiency.
          </p>
          <div class="mt-4">
            <a href="https://demo.nocobase.com/new" target="_blank" class="btn btn-primary mt-2 me-3">
              <i class="uil uil-play me-1"></i>Live demo
            </a>
            <a href="#copy-tutorial" class="btn btn-outline-primary mt-2">
              <i class="uil uil-copy me-1"></i>Deploy to Your Environment
            </a>
          </div>
        </div><!--end col-->
      </div><!--end row-->
    </div><!--end container-->
  </section><!--end section-->
  <!-- CTA Section End -->

  <ShapeFooter />
</Layout>

<style>
/* Developer logo styles */
.developer-logo {
  cursor: pointer;
  transition: opacity 0.2s ease;
}

.developer-logo:hover {
  opacity: 0.8;
}

/* Plugin card styles */
.plugin-card {
  transition: all 0.3s ease;
}

.plugin-card:hover {
  transform: translateY(-5px);
  box-shadow: 0 10px 30px rgba(0,0,0,0.15);
}
</style>

<script>
// Ticketing System demo interaction script
document.addEventListener('DOMContentLoaded', function() {
  console.log('Ticketing System Demo ready for interaction');
  
  // Developer logo hover effect
  const developerLogos = document.querySelectorAll('.developer-logo');
  developerLogos.forEach(logo => {
    logo.addEventListener('mouseenter', function(this: HTMLElement) {
      this.style.opacity = '0.8';
    });
    logo.addEventListener('mouseleave', function(this: HTMLElement) {
      this.style.opacity = '1';
    });
  });
});
</script> 