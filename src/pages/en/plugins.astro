---
import PageHeader from "../../components/PageHeader.astro";
import Layout from "../../layouts/Layout.astro";
import { getPage, listPluginCategories } from "../../utils";

const tabs = [
  {
    title: "All plugins",
    link: "/en/plugins",
    active: true,
  },
  {
    title: "Commercial plugins",
    link: "/en/plugins-commercial",
  },
  {
    title: "Plugin bundles",
    link: "/en/plugins-bundles",
  }
];

const data = await listPluginCategories();
const page = await getPage("plugins");
const title = page.title;
const description = page.description;
const keywords = page.keywords;
---

<Layout title={title} description={description} keywords={keywords}>
  <PageHeader title={title} tabs={tabs}>
    <span slot="description" set:html={description}></span>
    <a href="/en/contact" class="btn btn-outline-primary">Contact to buy or sell plugins<i class="uil uil-angle-right-b"></i></a>
  </PageHeader>

  <!-- Section Start -->
  <section class="section">
    <div class="container">
      {
        data
          .filter((group) => group.plugins.length > 0)
          .map((group) => (
            <>
              <h4 class="mt-2 pb-1 text-muted">{group.title}</h4>
              <div class="row pb-4">
                {group.plugins.map((plugin: any) => (
                  <div class="col-lg-4 col-md-6 col-12 pt-0 pb-4">
                    <div title={plugin.title} style="color: inherit;" class="card rounded shadow border-0 plugin-card">
                      <div class="card-body">
                        <div class="mt-2 plugin-box">
                          <h6 class="card-title mb-1">{plugin.title}</h6>
                          <div class="plugin-developer text-muted mb-3">By <span>{plugin.developer || 'NocoBase'}</span></div>
                          <p class="text-muted mb-2 plugin-overview">{plugin.description}
                            {plugin.doc && 
                                <a href={plugin.doc} target="_blank" style="font-size: 14px; ">Details</a>
                            }
                          </p>
                          <div class="plugin-footer">
                            {plugin.isComingSoon ? (
                              <span class="badge bg-soft-info plugin-type">
                                Coming soon
                              </span>
                            ) : plugin.isCommercial ? (

                              <h6 class="text-primary mb-0">
                                <span class="text-muted" style="font-weight: normal;font-style: italic;font-size: 12px;">Lifetime use, 1-year upgrade</span><br>
                                  ${plugin.price_1_year.toLocaleString('en-US')}
                                <span class="text-muted">/</span> <a class="text-muted" href="/en/plugins-bundles"> {plugin.price_point_1_year} <i class="uil uil-moon-eclipse me-1"></i></a> 
                              </h6>
                              <h6 class="text-muted mb-0" style="margin-left: auto;font-weight: normal;">
                                <span class="text-muted" style="font-weight: normal;font-style: italic;font-size: 12px;">Lifetime use & upgrade</span><br>
                                  ${plugin.price.toLocaleString('en-US')}
                                <span class="text-muted">/</span> <a class="text-muted" href="/en/plugins-bundles"> {plugin.price_point} <i class="uil uil-moon-eclipse me-1"></i></a> 
                              </h6>

                            ) : (
                              <span class="badge bg-soft-primary plugin-type">
                                Free
                              </span>
                            )}
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                ))}
              </div>
            </>
          ))
      }
    </div><!--end container-->
  </section><!--end section-->
</Layout><!--end section-->
