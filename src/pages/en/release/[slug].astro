---
import PageHeader from "../../../components/PageHeader.astro";
import Toc from "../../../components/Toc.astro";
import Layout from "../../../layouts/Layout.astro";
import { getRelease } from '../../../utils';

const { slug } = Astro.params;
const { data, headings, html } = await getRelease(slug);
---

<Layout title={data.title} description={data.description}>
  <PageHeader title={data.title} description={data.description} />
  <section class="section bg-white-color">
    <main
      class={headings.length > 0 ? "container blog-container" : "container"}
    >
      {
        headings.length > 0 ? (
          <>
            <div class="left-column markdown-body">
              <Fragment set:html={html} />
            </div>
            <div class="right-column">
              <Toc headings={headings} />
            </div>
          </>
        ) : (
          <Fragment set:html={html} />
        )
      }
    </main>
  </section>
</Layout>

<style>
  main {
    width: 960px;
    margin: 0 auto;
  }
</style>
