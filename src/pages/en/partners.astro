---
import PageHeader from "../../components/PageHeader.astro";
import Layout from "../../layouts/Layout.astro";

const title = "NocoBase Service Providers";
const description = "Find NocoBase certified service providers and partners worldwide for professional technical support and consulting services.";
const keywords = "NocoBase,Service Providers,Partners,Technical Support,Consulting Services";

// Partner data grouped by continent
const partnersByContinent = [
  {
    continent: "Asia",
    partners: [
      {
        name: "NocoBase China",
        location: "China路Beijing",
        description: "Official NocoBase team providing comprehensive product support and consulting services",
        logo: "https://static-docs.nocobase.com/logo-nocobase.png",
        website: "https://cn.nocobase.com",
        services: ["Product Development", "Technical Consulting", "Training Services", "Custom Development"],
        contact: "hello@nocobase.com",
        certified: true,
        featured: true
      },
      {
        name: "TechPartner Asia",
        location: "Singapore",
        description: "Technology service provider specializing in enterprise digital transformation with rich enterprise-level project experience",
        logo: "https://static-docs.nocobase.com/logo-nocobase.png",
        website: "https://example.com",
        services: ["System Integration", "Data Migration", "Technical Training"],
        contact: "contact@techpartner.sg",
        certified: true,
        featured: false
      }
    ]
  },
  {
    continent: "Europe",
    partners: [
      {
        name: "European NocoBase Solutions",
        location: "Germany路Berlin",
        description: "Providing NocoBase solutions for European enterprises, focusing on GDPR compliance and localization services",
        logo: "https://static-docs.nocobase.com/logo-nocobase.png",
        website: "https://example.com",
        services: ["Localization Services", "Technical Support", "Training", "GDPR Compliance"],
        contact: "info@nocobase.eu",
        certified: true,
        featured: false
      }
    ]
  },
  {
    continent: "North America",
    partners: [
      {
        name: "NocoBase Americas",
        location: "USA路San Francisco",
        description: "NocoBase certified service provider in North America, serving Fortune 500 companies",
        logo: "https://static-docs.nocobase.com/logo-nocobase.png",
        website: "https://example.com",
        services: ["Enterprise Consulting", "System Implementation", "Technical Support", "Cloud Deployment"],
        contact: "contact@nocobase.us",
        certified: true,
        featured: false
      }
    ]
  },
  {
    continent: "Oceania",
    partners: [
      {
        name: "Australia-New Zealand NocoBase Services",
        location: "Australia路Sydney",
        description: "NocoBase technology partner serving Australia and New Zealand, providing localized technical support",
        logo: "https://static-docs.nocobase.com/logo-nocobase.png",
        website: "https://example.com",
        services: ["Localized Deployment", "Technical Consulting", "Maintenance Support"],
        contact: "info@nocobase.au",
        certified: false,
        featured: false
      }
    ]
  }
];
---

<Layout title={title} description={description} keywords={keywords}>
  <PageHeader title={title} description={description} />
  <!-- Start Partners -->
  <section class="section">
    <div class="container">
      <div class="row">
        <!-- Sidebar -->
        <div class="col-lg-3 col-md-4">
          <div class="card border-0 shadow rounded sticky-bar" style="z-index: 1;">
            <div class="card-body">
              <h6 class="text-dark">Quick Navigation</h6>
              <ul class="list-unstyled sidebar-nav-list mb-0">
                {partnersByContinent.map((region) => (
                  <li>
                    <a href={`#${region.continent}`} class="text-muted">
                      <i class="uil uil-globe me-2"></i>{region.continent}
                    </a>
                  </li>
                ))}
              </ul>
              <div class="mt-4">
                <a href="#become-partner" class="btn btn-primary w-100" style="font-size: 0.85rem; padding: 8px 12px;">Become a Partner</a>
              </div>
            </div>
          </div>
        </div><!--end col-->

        <!-- Main Content -->
        <div class="col-lg-9 col-md-8">
          <div class="ms-lg-4">
            <div class="mb-4">
              <p class="text-muted mb-0">
                We partner with excellent technology service providers worldwide to provide you with professional NocoBase implementation, custom development, technical support and training services.
                No matter where you are in the world, you can find nearby professional service providers to help you.
              </p>
            </div>

            {partnersByContinent.map((region) => (
              <div class="mt-5" id={region.continent}>
                <h4 class="text-primary mb-4">
                  <i class="uil uil-globe me-2"></i>{region.continent}
                </h4>
                <div class="row">
                  {region.partners.map((partner) => (
                    <div class="col-lg-6 col-md-6 mb-4">
                      <div class="card border shadow-sm h-100">
                        <div class="card-body">
                          <div class="mb-4">
                            <div class="d-flex align-items-center justify-content-between mb-3">
                              <div class="partner-logo">
                                <img 
                                  src={partner.logo} 
                                  alt={partner.name}
                                  style="max-height: 45px; max-width: 140px; object-fit: contain;"
                                  loading="lazy"
                                />
                              </div>
                              {partner.certified && (
                                <span class="badge bg-soft-success text-success">
                                  <i class="uil uil-check-circle me-1"></i>Certified
                                </span>
                              )}
                            </div>
                            <div class="mt-3">
                              <h6 class="mb-1">{partner.name}</h6>
                              <small class="text-muted">
                                <i class="uil uil-map-marker me-1"></i>{partner.location}
                              </small>
                            </div>
                          </div>
                          <p class="text-muted mb-3">{partner.description}</p>
                          
                          <div class="mb-3">
                            <h6 class="text-dark mb-2">Services:</h6>
                            <div class="d-flex flex-wrap gap-1">
                              {partner.services.map((service) => (
                                <span class="badge bg-soft-primary text-primary">{service}</span>
                              ))}
                            </div>
                          </div>
                          
                          <div class="pt-3 border-top">
                            <div class="d-flex justify-content-between align-items-center">
                              <a href={`mailto:${partner.contact}`} class="btn btn-sm btn-outline-primary">
                                <i class="uil uil-envelope me-1"></i>Contact Us
                              </a>
                              <a href={partner.website} target="_blank" class="btn btn-sm btn-soft-primary">
                                <i class="uil uil-external-link-alt me-1"></i>Website
                              </a>
                            </div>
                          </div>
                        </div>
                      </div>
                    </div>
                  ))}
                </div>
              </div>
            ))}
          </div>
        </div><!--end col-->
      </div><!--end row-->
    </div><!--end container-->
  </section><!--end section-->
  <!-- End Partners -->

  <!-- Become Partner Start -->
  <section class="section bg-light" id="become-partner">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-12">
          <div class="section-title text-center mb-4 pb-2">
            <h4 class="title mb-4">Become a NocoBase Partner</h4>
            <p class="para-desc mx-auto text-muted mb-0">
              If you are a professional technology service provider and would like to become a NocoBase partner,
              we welcome you to join us. We will provide you with technical support, training resources and marketing support.
            </p>
          </div>
        </div><!--end col-->
      </div><!--end row-->

      <div class="row justify-content-center">
        <div class="col-lg-10">
          <div class="card bg-light border-0">
            <div class="card-body">
              <h6 class="text-dark mb-4 text-center">Partner Benefits</h6>
              <div class="row justify-content-center">
                <div class="col-lg-5 col-md-6">
                  <ul class="list-unstyled text-muted mb-0">
                    <li class="mb-3 d-flex align-items-start">
                      <i class="uil uil-check-circle text-success me-3 mt-1"></i>
                      <span>Official certification and brand authorization</span>
                    </li>
                    <li class="mb-3 d-flex align-items-start">
                      <i class="uil uil-check-circle text-success me-3 mt-1"></i>
                      <span>Technical training and certification system</span>
                    </li>
                    <li class="mb-3 d-flex align-items-start">
                      <i class="uil uil-check-circle text-success me-3 mt-1"></i>
                      <span>Priority technical support services</span>
                    </li>
                  </ul>
                </div>
                <div class="col-lg-5 col-md-6">
                  <ul class="list-unstyled text-muted mb-0">
                    <li class="mb-3 d-flex align-items-start">
                      <i class="uil uil-check-circle text-success me-3 mt-1"></i>
                      <span>Marketing resource support</span>
                    </li>
                    <li class="mb-3 d-flex align-items-start">
                      <i class="uil uil-check-circle text-success me-3 mt-1"></i>
                      <span>Priority access to business opportunity referrals</span>
                    </li>
                    <li class="mb-3 d-flex align-items-start">
                      <i class="uil uil-check-circle text-success me-3 mt-1"></i>
                      <span>Dedicated customer manager services</span>
                    </li>
                  </ul>
                </div>
              </div>
            </div>
          </div>
        </div><!--end col-->
      </div><!--end row-->

      <div class="row justify-content-center">
        <div class="col-12 text-center mt-4">
          <a href="mailto:partners@nocobase.com" class="btn btn-primary me-2">
            <i class="uil uil-envelope me-1"></i>Apply to Become a Partner
          </a>
          <a href="/en/contact" class="btn btn-outline-primary">
            <i class="uil uil-phone me-1"></i>Learn More
          </a>
        </div><!--end col-->
      </div><!--end row-->
    </div><!--end container-->
  </section><!--end section-->
  <!-- Become Partner End -->
  
  <style>
    .partner-logo {
      min-height: 45px;
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 8px;
      background-color: #f8f9fa;
      border-radius: 8px;
      border: 1px solid #e9ecef;
    }
    
    .partner-logo img {
      transition: opacity 0.3s ease;
    }
    
    .partner-logo:hover img {
      opacity: 0.8;
    }

    .sticky-bar {
      position: sticky;
      top: 100px;
      z-index: 99;
    }

    .sidebar-nav-list li {
      margin-bottom: 8px;
    }

    .sidebar-nav-list li a {
      display: flex;
      align-items: center;
      padding: 10px 14px;
      border-radius: 6px;
      transition: all 0.3s ease;
      text-decoration: none;
      font-size: 0.9rem;
      line-height: 1.3;
    }

    .sidebar-nav-list li a:hover {
      background-color: #f8f9fa;
      color: #2f55d4 !important;
    }

    @media (max-width: 991px) {
      .sticky-bar {
        position: relative;
        top: auto;
        margin-bottom: 30px;
      }
    }
  </style>
</Layout> 