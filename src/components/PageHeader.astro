---
import ShapeHeader from "./ShapeHeader.astro";

interface TabProps {
  title: string;
  link: string;
  active?: boolean;
}

interface Props {
  title: string;
  description?: any;
  tabs?: TabProps[];
  className?: string;
}

const { className, title, description, tabs = [] } = Astro.props;
---

<!-- Hero Start -->
<section class={"bg-half-170 bg-light d-table w-100 " + className}>
  <div class="container">
    <div class="row mt-5 justify-content-center">
      <div class="col-lg-12 text-center">
        <div class="pages-heading">
          <h1 class="title mb-0">{title}</h1>
          <p class="para-desc mx-auto text-muted">
            {description}
            <slot name="description" />
          </p>
          <slot />
        </div>
      </div><!--end col-->
    </div><!--end row-->
    {
      tabs?.length > 0 && (
        <div class="position-breadcrumb">
          <nav aria-label="breadcrumb" class="d-inline-block">
            <ul class="plugins-cat breadcrumb rounded shadow mb-0 px-4 py-2">
              {tabs.map((tab) => (
                <li
                  class={
                    tab.active ? "breadcrumb-item active" : "breadcrumb-item"
                  }
                >
                  <a href={tab.link}>{tab.title}</a>
                </li>
              ))}
            </ul>
          </nav>
        </div>
      )
    }
  </div>
</section><!--end section-->
<!-- Hero End -->

<ShapeHeader />
