---
interface Props {
    appId: string;
    apiKey: string;
    indexName: string;
    container?: string;
    language?: string;
    debug?: boolean;
    maxResultsPerGroup?:number;
}

const {
    appId="SOXMYGAM7C",
    apiKey="64843cbaefbee8de62326b2ae47b8601",
    indexName="nocobase",
    container = '#docsearch',
    language= 'en',
    debug = false,
    maxResultsPerGroup = 20
} = Astro.props;
---

<script is:inline src="https://cdn.jsdelivr.net/npm/@docsearch/js@3"></script>
<script
        is:inline
        type="text/javascript"
        define:vars={{
            appId,
            apiKey,
            indexName,
            container,
            language,
            debug,
            maxResultsPerGroup
        }}
        data-astro-rerun
>
    docsearch({
        appId: appId,
        apiKey: apiKey,
        indexName: indexName,
        container: container,
        language: language,
        debug: debug,
        maxResultsPerGroup:maxResultsPerGroup,
    });
</script>
